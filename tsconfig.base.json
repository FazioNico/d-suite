{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hexa/auth": ["libs/auth/src/index.ts"],
      "@hexa/calendar": ["libs/calendar/src/index.ts"],
      "@hexa/dids": ["./node_modules/dids"],
      "@hexa/drive": ["libs/drive/src/index.ts"],
      "@hexa/interfaces": ["libs/interfaces/src/index.ts"],
      "@hexa/notes": ["libs/notes/src/index.ts"],
      "@hexa/token-injection": ["libs/token-injection/src/index.ts"],
      "@hexa/ui": ["libs/ui/src/index.ts"],
      "@hexa/wallet": ["libs/wallet/src/index.ts"],
      "@hexa/welcome": ["libs/welcome/src/index.ts"],
      "assert": ["./node_modules/assert"],
      "crypto": ["./node_modules/crypto-browserify"],
      "dids": ["./node_modules/dids"],
      "http": ["./node_modules/stream-http"],
      "https": ["./node_modules/https-browserify"],
      "os": ["./node_modules/os-browserify"],
      "process": ["./node_modules/process"],
      "stream": ["./node_modules/stream-browserify"],
      "url": ["./node_modules/url"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
